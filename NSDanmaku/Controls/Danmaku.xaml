    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NSDanmaku.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <Grid x:Name="MainGrid">
        <TextBlock x:Name="TestBlock" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="25" Foreground="Transparent">TEST</TextBlock>
        <Canvas x:Name="PositionCanvas"/>
        <Grid x:Name="RollGrid"/>
        <Grid x:Name="TopGrid"/>
        <Grid x:Name="BottomGrid"/>
    </Grid>
</UserControl>
